{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./types", "./node_modules/@types"],
      "esModuleInterop": true,
       "allowSyntheticDefaultImports": true,
    },
    "include": ["src/**/*"]
  }